<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.flip.card.refernbuy.Fragments.HomeFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
           <!-- <SearchView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:autofillHints="Search For Product and More"
                android:background="@drawable/rounded_seachview"
                tools:targetApi="honeycomb" />-->


            <com.smarteist.autoimageslider.SliderLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:id="@+id/imageSlider">
            </com.smarteist.autoimageslider.SliderLayout>

            <com.liuzhuang.afgridlayout.AutoFitGridLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                app:columnCount="4">

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/apparel"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:background="@drawable/beauty"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:background="@drawable/shoes"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:background="@drawable/electronics"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:background="@drawable/furniture"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:background="@drawable/ho"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:background="@drawable/stationary"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:background="@drawable/ho"/>
            </com.liuzhuang.afgridlayout.AutoFitGridLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Buying with friend?"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:layout_margin="5dp"
                android:background="@color/lightgrey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="false"
                android:layout_margin="5dp"
                android:hint="    Enter Order Number"
                android:background="@drawable/rounded_editbox"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Elegance"
                android:textColor="@android:color/white"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:background="@drawable/rounded_button"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />



        </LinearLayout>


    </ScrollView>

</FrameLayout>
